<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
    <androidx.appcompat.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/recheck_toolbar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="재확인"
            android:textSize="20dp"
            android:textColor="#000000">

        </TextView>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:text="※맞지 않는 사진이 있는지 확인해주세요"
            android:textSize="15dp">

        </TextView>


    </androidx.appcompat.widget.Toolbar>

    <GridView
        android:layout_weight="1"
        android:id="@+id/gv_regiperson2"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:gravity="center"
        android:numColumns="3"
        android:stretchMode="columnWidth">
    </GridView>

    <LinearLayout
        android:padding="20dp"
        android:layout_weight="5"
        android:gravity="right|bottom"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:baselineAligned="true">

        <TextView
            android:id="@+id/tv_regiperson2"
            android:visibility="invisible"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:text="최대 10초까지 소요될 수 있습니다"/>

        <ProgressBar
            android:id="@+id/pb_loading_regiperson2"
            android:visibility="invisible"
            android:paddingTop="13dp"
            android:paddingBottom="5dp"
            android:layout_marginRight="3dp"
            android:layout_width="50dp"
            android:layout_height="50dp"/>
        <Button
            android:id="@+id/btn_regiperson2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="인물등록" />


    </LinearLayout>

</LinearLayout>