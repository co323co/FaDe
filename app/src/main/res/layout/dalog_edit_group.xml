<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:gravity="left|center"
        android:layout_marginTop="5dp"
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:padding="10dp"
        android:textSize="20dp"
        android:text="그룹 수정"
        android:layout_width="match_parent"
        android:textColor="@color/sky"
        android:fontFamily="@font/nanumbarunpen_b"
        android:layout_height="50dp"/>

    <ImageView
        android:id="@+id/top_line_of_dialogAddgroup"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray"/>

    <LinearLayout
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:orientation="horizontal">

        <ListView
            android:scrollbarSize="2dp"
            android:scrollbars="vertical"
            android:id="@+id/lv_addGroupPerson_left"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

        <ImageView
            android:layout_margin="10dp"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/gray"/>

        <androidx.recyclerview.widget.RecyclerView
            android:scrollbarSize="2dp"
            android:scrollbars="vertical"
            android:id="@+id/rv_addGroupPerson_right"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <LinearLayout
        android:gravity="right"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:textColor="#2475B5"
            android:background="@color/clear"
            android:text="취소"
            android:id="@+id/btn_addGroup_no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <Button
            android:textColor="#2475B5"
            android:background="@color/clear"
            android:text="확인"
            android:id="@+id/btn_addGroup_ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

</LinearLayout>