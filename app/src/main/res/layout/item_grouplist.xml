<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="top|center"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"

    android:layout_marginLeft="30dp"
    android:layout_marginRight="30dp"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="15dp">

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--상단부!-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/et_groupList_name"
                android:enabled="false"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="그룹이름"
                android:textColor="#8F040404"
                android:background="@null"
                android:textSize="20dp"
                android:layout_weight="1"/>

            <Button
                android:id="@+id/btn_subGroup"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@drawable/ic_close"
                android:layout_gravity="right"/>
        </LinearLayout>

        <!--하단부!-->
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <!-- 프로필사진+이름 덩어리!-->
            <LinearLayout
                android:layout_margin="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_groupList_profileImgae"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/ic_profile"/>
                <TextView
                    android:id="@+id/tv_groupList_profileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이름"/>

            </LinearLayout>



        </LinearLayout>

        <ImageView
            android:visibility="visible"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.7dp"
            android:background="#2F000000"/>

        <!--확장!-->
        <LinearLayout
            android:visibility="visible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/ibtn_addGroupPerson"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="9dp"
                android:src="@drawable/ic_addperson"
                android:scaleType="fitCenter"
                android:tint="@color/sky"
                android:background="@android:color/white"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2F000000"/>

            <ImageButton
                android:id="@+id/ibtn_subGroupPerson"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="9dp"
                android:src="@drawable/ic_subperson"
                android:scaleType="fitCenter"
                android:tint="@color/sky"
                android:background="@android:color/white"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2F000000"/>

            <ImageButton
                android:id="@+id/ibtn_openGroupGallery"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="6dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_gallery"
                android:background="@android:color/white"
                android:layout_weight="1"/>

            <ImageView
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2F000000"/>

            <ImageButton
                android:id="@+id/ibtn_editGroupName"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="9dp"
                android:src="@drawable/ic_pencil"
                android:scaleType="fitCenter"
                android:tint="@color/sky"
                android:background="@android:color/white"
                android:layout_weight="1"/>

            <ImageButton
                android:visibility="gone"
                android:id="@+id/ibtn_editCheck"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:padding="9dp"
                android:src="@drawable/ic_check"
                android:scaleType="fitCenter"
                android:tint="#F17C7C"
                android:background="@android:color/white"
                android:layout_weight="1"/>

        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>