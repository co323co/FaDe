<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:layout_marginTop="50dp">
    <TextView
        android:layout_marginBottom="10dp"
        android:padding="20dp"
        android:fontFamily="@font/nanumbarunpen_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "어떤 사람을 등록할까요?"
        android:layout_gravity="center"
        android:textSize="25dp"/>

    <FrameLayout
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/ivUser"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_profile_big" />

        <Button
            android:id="@+id/btn_profileAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right|bottom"
            android:text="+" />
    </FrameLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:fontFamily="@font/nanumbarunpen_r"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 : "
            android:padding="5dp"
            android:textSize="25dp"
            android:layout_marginTop="30dp"/>

        <EditText
            android:id="@+id/et_profile_name_regiperson1"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_addPeroson_regiperson1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|bottom"
        android:layout_marginTop="30dp"
        android:text=">>" />

</LinearLayout>